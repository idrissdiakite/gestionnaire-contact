{% extends "admin/base.html.twig" %}

{% block body %}
	<h1 class="mt-5 ml-5">Ajouter un contact</h1>
	<div class="mt-5 ml-5 mr-5">
		{{ form_start(form) }}
		{{ form_row(form.firstname, { 'label': 'Prénom' }) }}
		{{ form_row(form.lastname, { 'label': 'Nom' }) }}
		{{ form_row(form.email, { 'label': 'Adresse email' }) }}
		{{ form_row(form.phoneNumber, { 'label': 'Numéro de téléphone' }) }}
		{{ form_row(form.city, { 'label': 'Ville' }) }}
		{{ form_row(form.category, { 'label': 'Relation' }) }}
		{{ form_row(form.envoyer) }}
		{{ form_end(form) }}
	</div>

	<a class="ml-5" href="{{ path('main') }}">Retour à la page d'accueil</a>
{% endblock %}
